{
  "tech_stack": [
    "python",
    "fastapi",
    "pydantic",
    "uvicorn",
    "gunicorn",
    "supabase",
    "clerk",
    "requests",
    "streamlit"
  ],
  "features": [
    {
      "name": "Health",
      "description": "Service liveness and dependency readiness with flattened keys",
      "files": ["main.py"],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/health": {
            "get": {
              "summary": "Health check",
              "responses": {
                "200": {
                  "description": "OK",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "properties": {
                          "status": {"type": "string"},
                          "api": {"type": "boolean"},
                          "clerk": {"type": "boolean"},
                          "supabase": {"type": "boolean"},
                          "timestamp": {"type": "string"}
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "User Profile",
      "description": "Fetches user profile; returns flat object with top-level id",
      "files": ["main.py"],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/user/profile": {
            "get": {
              "summary": "Get user profile",
              "responses": {"200": {"description": "OK"}}
            }
          }
        }
      }
    },
    {
      "name": "Onboarding Questionnaire",
      "description": "Saves onboarding responses and creates profile",
      "files": ["main.py"],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/onboarding/questionnaire": {"post": {"summary": "Save questionnaire"}},
          "/user/onboarding": {"post": {"summary": "Alias save questionnaire"}}
        }
      }
    },
    {
      "name": "LinkedIn OAuth",
      "description": "Save and check LinkedIn token; includes legacy aliases",
      "files": ["main.py"],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/auth/linkedin/token": {"post": {"summary": "Save LinkedIn token"}},
          "/auth/linkedin/status": {"get": {"summary": "Check LinkedIn status"}},
          "/linkedin/token": {"post": {"summary": "Alias save LinkedIn token"}},
          "/linkedin/status": {"get": {"summary": "Alias LinkedIn status"}}
        }
      }
    },
    {
      "name": "Posts",
      "description": "Generate, list draft and published posts; legacy query alias",
      "files": ["main.py"],
      "api_doc": {
        "openapi": "3.0.0",
        "paths": {
          "/posts/generate": {"post": {"summary": "Generate post"}},
          "/posts/pending": {"get": {"summary": "List draft posts"}},
          "/posts/published": {"get": {"summary": "List published posts"}},
          "/posts": {"get": {"summary": "Alias list posts by status query"}}
        }
      }
    },
    {
      "name": "Auth Verify",
      "description": "Verifies JWT with Clerk and returns basic user info",
      "files": ["main.py"],
      "api_doc": {"openapi": "3.0.0", "paths": {"/auth/verify": {"get": {"summary": "Verify"}}}}
    }
  ]
}
